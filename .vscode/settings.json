{
  "editor.fontFamily" : "Fira Code",
  "editor.fontLigatures" : true,
  "editor.accessibilitySupport" : "off",
  "editor.lineNumbers" : "relative",
  "editor.minimap.enabled" : false,
  "files.insertFinalNewline" : true,
  "files.trimFinalNewlines" : true,
  "files.trimTrailingWhitespace" : true,
  "workbench.colorTheme" : "Tokyo Night",
  "[elm][ruby]" : {
    "editor.formatOnSave" : true
  },
  "rubyLsp.formatter": "rubocop",
  "rubyLsp.rubyVersionManager": "custom",
  // "rubyLsp.customRubyCommand":  "eval \"$(rtx env -s zsh)\"",// "rtx activate fish | source", // Instructions for zsh, change for bash or fish
  "rubyLsp.customRubyCommand":  "mise activate fish | source",
  "vim.leader" : " ",
  "vim.hlsearch" : true,
  "vim.camelCaseMotion.enable" : true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "commands": [
        "github.copilot.insertSuggestion",
      ],
      "before": [
        "ctrl-f",
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive" : [
    {
      "commands" : [
        "editor.action.sortLinesAscending"
      ],
      "before" : [
        "g",
        "s"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive" : [
    {
      "commands" : [
        ":nohl"
      ],
      "before" : [
        "enter"
      ]
    },
    {
      "commands" : [
        "workbench.action.navigateLeft"
      ],
      "before" : [
        "ctrl+h"
      ]
    },
    {
      "commands" : [
        "workbench.action.navigateRight"
      ],
      "before" : [
        "ctrl+l"
      ]
    },
    {
      "commands" : [
        ":w"
      ],
      "before" : [
        "<leader>",
        "w"
      ]
    },
    {
      "commands" : [
        ":q"
      ],
      "before" : [
        "<leader>",
        "q"
      ]
    },
    {
      "commands" : [
        "workbench.files.action.focusOpenEditorsView"
      ],
      "before" : [
        "<leader>",
        "f"
      ]
    },
    {
      "commands" : [
        {
          "command" : "workbench.action.tasks.runTask",
          "args" : [
            "Run test case"
          ]
        }
      ],
      "before" : [
        "<leader>",
        "s"
      ]
    }
  ],
  "redhat.telemetry.enabled": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
}
