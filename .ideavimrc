set visualbell
set noerrorbells

" Plugins
set ReplaceWithRegister
set argtextobj
set commentary
set easymotion
set exchange
set ideajoin
set surround
set textobj-entire

let g:argtextobj_pairs="(:),{:},<:>,[:]"

" Mappings
let mapleader = " "

map <leader>w :w!<CR>

map <C-h> <C-W>h
